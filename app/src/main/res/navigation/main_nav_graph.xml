<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.kotlinmvvm.home.ui.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_communityFragment"
            app:destination="@id/communityFragment" />
        <action
            android:id="@+id/action_homeFragment_to_mineFragment"
            app:destination="@id/mineFragment" />
    </fragment>
    <fragment
        android:id="@+id/communityFragment"
        android:name="com.example.kotlinmvvm.community.ui.CommunityFragment"
        android:label="CommunityFragment"
        tools:layout="@layout/fragment_community">
        <action
            android:id="@+id/action_communityFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_communityFragment_to_mineFragment"
            app:destination="@id/mineFragment" />
    </fragment>
    <fragment
        android:id="@+id/mineFragment"
        android:name="com.example.kotlinmvvm.mine.ui.MineFragment"
        android:label="MineFragment"
        tools:layout="@layout/fragment_mine">
        <action
            android:id="@+id/action_mineFragment_to_communityFragment"
            app:destination="@id/communityFragment" />
        <action
            android:id="@+id/action_mineFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>