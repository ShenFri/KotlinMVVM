<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.kotlinmvvm.main.ui.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
           />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.kotlinmvvm.main.ui.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_WXArticleFragment"
            app:destination="@id/wxArticleFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainActivity"
            app:destination="@id/mainActivity" />

    </fragment>
    <fragment
        android:id="@+id/wxArticleFragment"
        android:name="com.example.kotlinmvvm.home.ui.WXArticleFragment"
        android:label="WXArticleFragment"
        tools:layout="@layout/fragment_wxarticle" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.kotlinmvvm.main.ui.MainActivity"
        android:label="MainActivity"
        tools:layout="@layout/activity_main_nav">
        <argument
            android:name="key"
            app:argType="string"
            android:defaultValue="test" />
    </activity>

</navigation>